generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")

}

model todos {
  id           Int       @id @default(autoincrement())
  title        String    @db.VarChar(255)
  description  String?
  is_completed Boolean?  @default(false)
  created_at   DateTime? @default(now()) @db.Timestamp(6)
  
}

model User {
  id          Int          @id @default(autoincrement())
  email       String       @unique
  role        String
  tournaments Tournament[]
  participants Participant[]
}

model Tournament {
  id          Int       @id @default(autoincrement())
  name        String
  date        DateTime
  location    String?
  organizer   User      @relation(fields: [organizerId], references: [id])
  organizerId Int
  events       TournamentEvent[]
  participants Participant[]
}

model Event {
  id           Int             @id @default(autoincrement())
  name         String
  
  eventDivisions EventDivision[]
  tournaments    TournamentEvent[]

}

model Division {
  id           Int             @id @default(autoincrement())
  name         String
  minAge       Int?
  maxAge       Int?
  beltRankId   Int?
  beltRank      BeltRank? @relation(fields:[beltRankId], references: [id])
  eventDivisions EventDivision[]
}

model EventDivision {
  id         Int      @id @default(autoincrement())
  event      Event    @relation(fields: [eventId], references: [id])
  eventId    Int
  division   Division @relation(fields: [divisionId], references: [id])
  divisionId Int
  registrations Registration[]
  displayName  String?  
}

model Participant {
  id           Int          @id @default(autoincrement())
  firstName    String
  lastName     String
  age          Int
  tournament   Tournament   @relation(fields: [tournamentId], references: [id])
  tournamentId Int
  user         User         @relation(fields: [userId], references: [id])
  userId       Int
  registrations Registration[]
  notes        String?
}

model Registration {
  id              Int            @id @default(autoincrement())
  participant     Participant    @relation(fields: [participantId], references: [id])
  participantId   Int
  eventDivision   EventDivision  @relation(fields: [eventDivisionId], references: [id])
  eventDivisionId Int
}

model TournamentEvent {
  id           Int        @id @default(autoincrement())
  tournament   Tournament @relation(fields: [tournamentId], references: [id])
  tournamentId Int
  event        Event      @relation(fields: [eventId], references: [id])
  eventId      Int

  // Optional metadata specific to this event in this tournament
  scheduledAt  DateTime?
  bracketType  String?
}

model BeltRank {
  id           Int       @id @default(autoincrement())
  rank         String
  beltColor    String
  disiplineId  Int 
  disipline    Disipline   @relation(fields:[disiplineId], references: [id])  
  divisions Division[]   
}

model Disipline {
  id          Int     @id @default(autoincrement())  
  description String
  beltRanks BeltRank[]
}