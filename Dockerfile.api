FROM node:22-alpine

WORKDIR /app

# Copy everything
COPY . .

# Install dependencies
RUN npm ci --legacy-peer-deps

# Compile TypeScript with explicit flags
RUN npx tsc api-server.ts --module commonjs --target es2020 --esModuleInterop --skipLibCheck --moduleResolution node --lib es2020

# Expose port
EXPOSE 8080

# Run the compiled server
CMD ["node", "api-server.js"]
